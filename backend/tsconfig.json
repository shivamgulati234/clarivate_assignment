{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "baseUrl": ".", 
      "paths": {
        "shared-orm-library": ["../shared-orm-library/dist"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }